#include <stdio.h>

int main()
 
{
    int cotador = -1;
    float valor, media, valorLoop=1;
     
    while(valorLoop != 0) {
       
        printf("\ndigite um valor: \n");
        scanf("%f", &valorLoop);
    
        valor += valorLoop;
        cotador++;
    }
        media = valor/cotador;
    
        printf("a media Ã©: %f", media);
    
}
